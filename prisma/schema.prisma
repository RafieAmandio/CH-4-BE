// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Users
model User {
  id               String               @id @default(uuid()) @db.Uuid
  auth             Provider             @default(EMAIL)
  email            String               @unique
  passwordHash     String
  username         String
  name             String
  nickname         String
  photo            String
  is_active        Boolean
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
}

enum Provider {
  APPLE
  LINKEDIN
  EMAIL
}